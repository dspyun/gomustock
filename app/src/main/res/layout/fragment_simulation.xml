<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.simulation.SimulationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/sim_asset_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_weight = "1"
            android:text="투자계정"/>
        <Button
            android:id="@+id/sim_bench_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_weight = "1"
            android:text="벤치계정"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/sim_cache_chart"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />


        <!-- com.github.mikephil.charting.charts.CandleStickChart -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/sim_stock_chart"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />

    </LinearLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:orientation="horizontal"
            android:rowCount="2">
            <TableRow>
            <TextView
                android:id="@+id/sim_selectitem"
                android:layout_width="@dimen/grid_width"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textColor="@color/LightGray"
                android:text="종목\n선택"
                android:textSize="14sp"
                android:background="@xml/bg_custom_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"/>
            <TextView
                android:id="@+id/sim_dl"
                android:layout_width="@dimen/grid_width"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="파일\n다운로드"
                android:textColor="@color/LightGray"
                android:textSize="14sp"
                android:background="@xml/bg_custom_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"/>
            <TextView
                android:id="@+id/sim_tool"
                android:layout_width="@dimen/grid_width"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="전략\n적용"
                android:textColor="@color/LightGray"
                android:textSize="14sp"
                android:background="@xml/bg_custom_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"/>
            <TextView
                android:id="@+id/sim_sim"
                android:layout_width="@dimen/grid_width"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="시뮬\n결과"
                android:gravity="center_vertical|right"
                android:textColor="@color/LightGray"
                android:textSize="14sp"
                android:background="@xml/bg_custom_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"/>
            <ImageView
                android:id="@+id/sim_refresh_price"
                android:layout_width="@dimen/grid_imagewidth"
                android:layout_height="40dp"
                android:layout_column="4"
                android:layout_rowSpan="2"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/sync_48px"/>

            <ImageView
                android:id="@+id/sim_addnew"
                android:layout_width="@dimen/grid_imagewidth"
                android:layout_height="38dp"
                android:layout_column="4"
                android:layout_rowSpan="2"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/stock_add_48px"/>
            </TableRow>
        </TableLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sim_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="70dp"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/simul_list_row"/>
    </FrameLayout>
</LinearLayout>