<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.dashboard.DashboardFragment">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="2">
                <ImageView
                    android:id="@+id/zumchart_kr"
                    android:layout_width="193dp"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_weight = "1"/>
                <ImageView
                    android:id="@+id/zumchart_na"
                    android:layout_width="193dp"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_weight = "1"/>
                <TextView
                    android:id="@+id/image1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="코스피"
                    android:gravity="center_horizontal"
                    android:layout_weight = "1"/>
                <TextView
                    android:id="@+id/image2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S&amp;P 500"
                    android:gravity="center_horizontal"
                    android:layout_weight = "1"/>
        </GridLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TableRow>
                        <Button
                            android:id="@+id/bt_dl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="정보DL"
                            android:layout_weight = "1"/>
                        <Button
                            android:id="@+id/bt_update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update"
                            android:layout_weight = "1"/>
                        <Button
                            android:id="@+id/bt_signal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Signal"
                            android:layout_weight = "1"/>
                        <Button
                            android:id="@+id/bt_dummy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="dummy"
                            android:layout_weight = "1"/>
                </TableRow>
        </TableLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="70dp"
                    android:clipToPadding="false"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/board_list_row"/>
        </FrameLayout>
</LinearLayout>