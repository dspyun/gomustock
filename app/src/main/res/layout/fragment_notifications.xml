<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/etf_spinner"
            android:layout_width="180dp"
            android:layout_height="@dimen/topline"
            android:textSize="30sp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:background="@color/darkmode_dark_4a4a4a_8f9097"/>

        <ImageView
            android:id="@+id/etf_dlicon"
            android:layout_width="@dimen/grid_imagewidth"
            android:layout_height="@dimen/topline"
            android:gravity="center"
            android:src="@drawable/download_white_48dp" />

        <ImageView
            android:id="@+id/etf_news"
            android:layout_width="@dimen/grid_imagewidth"
            android:layout_height="@dimen/topline"
            android:gravity="center"
            android:src="@drawable/newspaper_white_48" />

        <ImageView
            android:id="@+id/etf_addnew"
            android:layout_width="@dimen/grid_imagewidth"
            android:layout_height="@dimen/topline"
            android:gravity="center"
            android:src="@drawable/add_circle_white_48dp"/>

        <ImageView
            android:id="@+id/etf_sync"
            android:layout_width="50dp"
            android:layout_height="@dimen/topline"
            android:layout_row="0"
            android:layout_column="4"
            android:gravity="center"
            android:src="@drawable/sync_white_48" />

    </LinearLayout>

    <TextView
        android:id="@+id/short_news"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity = "fill_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/kos_chart"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity = "fill_horizontal"
            android:layout_row="0" />
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/na_chart"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity = "fill_horizontal"
            android:layout_row="0" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/noti_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="70dp"
            android:clipToPadding="false"
            tools:listitem="@layout/noti_list_row"/>
    </FrameLayout>

</LinearLayout>