<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.notifications.NotificationsFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TableRow>
            <Button
                android:id="@+id/tv_noti_dl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정보DL"
                android:layout_weight = "1"/>
            <Button
                android:id="@+id/tv_noti_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_weight = "1"/>
            <Button
                android:id="@+id/tv_noti_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signal"
                android:layout_weight = "1"/>
            <Button
                android:id="@+id/tv_noti_dummy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dummy"
                android:layout_weight = "1"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/sox"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity = "fill_horizontal"
            android:layout_row="0" />
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/nasdaq"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity = "fill_horizontal"
            android:layout_row="0" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/snp500"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity = "fill_horizontal"
            android:layout_row="0" />
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/dow"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity = "fill_horizontal"
            android:layout_row="0" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/kospi"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity = "fill_horizontal"
            android:layout_row="0" />
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/composit"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity = "fill_horizontal"
            android:layout_row="0" />
    </LinearLayout>

    <ListView
        android:id="@+id/sector_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/noti_list_sector"/>

</LinearLayout>