<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.note.NoteFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/memo_spinner"
            android:layout_width="180dp"
            android:layout_height="@dimen/topline"
            android:textSize="30sp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:background="@color/darkmode_dark_4a4a4a_8f9097"/>

        <ImageView
            android:id="@+id/memoedit"
            android:layout_width="@dimen/grid_imagewidth"
            android:layout_height="@dimen/topline"
            android:gravity="center"
            android:src="@drawable/edit_white_48" />

        <ImageView
            android:id="@+id/memosave"
            android:layout_width="@dimen/grid_imagewidth"
            android:layout_height="@dimen/topline"
            android:gravity="center"
            android:src="@drawable/save_white_48" />
        <ImageView
            android:id="@+id/dl_price"
            android:layout_width="@dimen/grid_imagewidth"
            android:layout_height="@dimen/topline"
            android:gravity="center"
            android:src="@drawable/download_white_48dp" />

        <ImageView
            android:id="@+id/view_price"
            android:layout_width="@dimen/grid_imagewidth"
            android:layout_height="@dimen/topline"
            android:gravity="center"
            android:src="@drawable/menu_book_white_48"/>
        <ImageView
            android:id="@+id/swap_price"
            android:layout_width="@dimen/grid_imagewidth"
            android:layout_height="@dimen/topline"
            android:gravity="center"
            android:src="@drawable/swap_horiz_white_48" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/money_chart"
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity = "fill_horizontal"
            android:layout_row="0" />

    </LinearLayout>
    <ScrollView
        android:id="@+id/editor_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/myeditor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textIsSelectable="true"
            android:gravity="top|left"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:textSize="14sp"
            android:paddingBottom="70dp"
            android:clipToPadding="false"/>
    </ScrollView>

</LinearLayout>